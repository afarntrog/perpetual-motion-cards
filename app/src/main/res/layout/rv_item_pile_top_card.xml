<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/activity_half_margin"
    android:layout_marginStart="@dimen/activity_half_margin"
    android:layout_marginLeft="@dimen/activity_half_margin"
    app:cardCornerRadius="@dimen/fab_margin"
    app:cardBackgroundColor="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/rv_item_pile_top_card_inner_card"/>

        <TextView
            android:id="@+id/pile_card_in_stack"
            android:text="@string/cards_in_stack"
            style="@style/textViewStyle.cardText"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>