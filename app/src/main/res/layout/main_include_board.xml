<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/colorCardBackground"
    tools:showIn="@layout/content_main">


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rv_piles"
        android:paddingBottom="@dimen/activity_half_margin"
        android:paddingEnd="@dimen/activity_half_margin"
        android:paddingRight="@dimen/activity_half_margin"
        tools:itemCount="4"
        tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        tools:listitem="@layout/rv_item_pile_top_card"
        tools:spanCount="2"
        />

</androidx.cardview.widget.CardView>

<!--        tools:spanCount="2"
        means there are 2 cards in this board

-->