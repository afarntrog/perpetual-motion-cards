<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.SplashScreenTheme">
        <item name="android:background">@drawable/splash_background</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- main_include_button_bar - two styles -->
    <style name="buttonBarStyle" parent="Base.Widget.AppCompat.ButtonBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/activity_half_margin</item>
        <item name="android:background">@color/colorDefaultBackground</item>
        <item name="android:divider">@android:drawable/divider_horizontal_bright</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:showDividers">middle</item>
        <item name="android:weightSum">1</item>
    </style>

    <style name="borderlessButtonStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/button_font_size</item>
    </style>

    <!-- main_include_status_bar - three styles -->
    <style name="statusBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:divider">?dividerVertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:showDividers">middle</item>
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="textViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>

    <style name="textViewStyle.status">
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:textSize">@dimen/button_font_size</item>
    </style>

    <!-- rv_item.xml (outer) - TextView style -->
    <style name="textViewStyle.cardText">
        <item name="android:layout_marginBottom">@dimen/activity_horizontal_margin</item>
        <item name="android:textSize">@dimen/card_pile_font_size</item>
    </style>


</resources>
